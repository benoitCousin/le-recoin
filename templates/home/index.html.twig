{% extends "base.html.twig" %}

{% block title %} Acceuil {% endblock %}
{% block body %} 
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  
    <div class="carousel-inner">

          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"aria-label="Slide 3"></button>
          </div>
          
          <div class="carousel-item active">
            <img src="https://cdn.pixabay.com/photo/2017/08/20/09/10/system-2660914_960_720.jpg" class="d-block w-100">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Bienvenue</h3>
                <p class="lead">This is a description for the first slide.</p>
              </div>
          </div>
          <div class="carousel-item">
            <img  src="https://cdn.pixabay.com/photo/2017/07/21/23/57/concert-2527495_960_720.jpg" class="d-block w-100">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Annonce populaire</h3>
                <p class="lead">This is a description for the second slide.</p>
              </div>
          </div>
          <div class="carousel-item">
            <img  src="https://cdn.pixabay.com/photo/2018/05/14/16/54/cyber-3400789_960_720.jpg" class="d-block w-100">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="display-4">Rejoignez-nous</h3>
                <p class="lead">This is a description for the Third slide.</p>
              </div>
          </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="">Précédent</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="">Suivant</span>
            </button>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-4 mb-4">Annonces populaires :</h2>
        </div>
        {% for product in products %}

        <div class="col-md-6 col-lg-4">

            <div class="card-box">
                <div class="card-thumbnail">
                    {{ dump(product.images) }} ;
                   {#<img src="{{ asset('uploads/images/product' ~ product.images[0].name ) }}" class="img-fluid" alt="image">#}
                </div>
                <h3><a href="#" class="mt-2 text-danger">{{ product.title }}</a></h3>
                <p class="text-secondary">{{ product.content|raw }}</p>
                <a href="#" class="btn btn-sm btn-secondary float-right">Voir l'annonce >></a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
